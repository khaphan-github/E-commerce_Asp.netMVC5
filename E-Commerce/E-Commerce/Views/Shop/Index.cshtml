                </div><!-- End .col-lg-9 -->
                <aside class="col-lg-3 order-lg-first">
                    <div class="sidebar sidebar-shop">
                        <div class="widget widget-clean">
                            <label>Filters:</label>
                            <a href="#" class="sidebar-filter-clear">Clean All</a>
                        </div><!-- End .widget widget-clean -->

                        <div class="widget widget-categories">
                            <h3 class="widget-title">Categoris</h3><!-- End .widget-title -->
                            <div class="widget-body">
                                <div class="accordion" id="widget-cat-acc">
                                    <!--vòng foreach-->
                                    @foreach (Category category in categoryList)
                                    {
                                        <div class="acc-item">
                                            <h5>
                                                <a class="collapsed" role="button" data-toggle="collapse" href="#collapse-@category.Id" aria-expanded="false" aria-controls="collapse-@category.Id">
                                                    @category.Name
                                                </a>
                                            </h5>
                                            <div id="collapse-@category.Id" class="collapse" data-parent="#widget-cat-acc">
                                                <div class="collapse-wrap">
                                                    <ul>
                                                        @foreach (var item in typeProductList)
                                                        {
                                                            if (item.CategoryID == category.Id)
                                                            {
                                                                <li><a href="@Url.Action("Index", "Home", new { searchString = item.Name})">@item.Name</a></li>
                                                            }
                                                        }
                                                    </ul>
                                                </div><!-- End .collapse-wrap -->
                                            </div><!-- End .collapse -->
                                        </div><!-- End .acc-item -->
                                    }

                                </div><!-- End .accordion -->
                            </div><!-- End .widget-body -->
                        </div><!-- End .widget -->

                        <div class="widget ">
                            <h3 class="widget-title">
                                    Hãng sản suất
                            </h3><!-- End .widget-title -->
                            @foreach (Company companys in ViewBag.Brands)
