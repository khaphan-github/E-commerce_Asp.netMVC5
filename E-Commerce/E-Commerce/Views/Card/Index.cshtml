@{
    ViewBag.Title = "Index";
    Layout = "~/Views/ECOMMERCE/_LayoutPage1.cshtml";
}
@using E_Commerce_Business_Logic.CartHandler;
@using E_Commerce_Repository.Models;
@using E_Commerce_Business_Logic.Session;

<!DOCTYPE html>
<html lang="en">
<body>
    <div class="page-wrapper">


        <div class="header-middle sticky-header">
            <div class="container">
            </div><!-- End .container -->
        </div><!-- End .header-middle -->

        <main class="main">

            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page" style="font-size: x-large">Giỏ hàng</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8">
                                <table class="table table-cart table-mobile">
                                    <thead>
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th>Giá</th>
                                            <th>Số lượng</th>
                                            <th>Tổng cộng</th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @if (Session[SessionConstaint.USERSESION] as AccountConsumer != null) {
                                            foreach (ProductView product in (Session[SessionConstaint.SHOPPINGCART] as CartView).Products) {
                                                <tr>
                                                    <td class="product-col">
                                                        <div class="product">
                                                            <figure class="product-media">
                                                                <a href="#">
                                                                    <img src="@product.productImages.ElementAt(0).URL" alt="Product image">
                                                                </a>
                                                            </figure>

                                                            <h3 class="product-title">
                                                                <a href="#">@product.productName</a>
                                                            </h3><!-- End .product-title -->
                                                        </div><!-- End .product -->
                                                    </td>
                                                    <td class="price-col"> @String.Format("{0:n0}", product.Price) đ</td>

                                                    <td class="quantity-col">
                                                        <h4>@product.numberItems</h4>
                                                    </td>

                                                    <td class="total-col" id="totalproductPrice"></td>

                                                    <td class="remove-col"><button class="btn-remove"><i class="icon-close"></i></button></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table><!-- End .table table-wishlist -->

                                <div class="cart-bottom">
                                    <a href="#" class="btn btn-outline-dark-2"><span>Cập nhật giỏ hàng</span><i class="icon-refresh"></i></a>
                                </div><!-- End .cart-bottom -->
                            </div><!-- End .col-lg-9 -->
                            <aside class="col-lg-4">
                                <div class="summary summary-cart" style="background-color: #F2F0FE">
                                    <h3 class="summary-title">Tổng tiền giỏ hàng</h3><!-- End .summary-title -->

                                    <table class="table table-summary">
                                        <tbody>

                                            <tr class="summary-shipping">
                                                <td>Vận chuyển</td>
                                                <td>&nbsp;</td>
                                            </tr>

                                            <tr class="summary-shipping-row">
                                                <td>
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="free-shipping" name="shipping" class="custom-control-input">
                                                        <label class="custom-control-label" for="free-shipping">Miễn phí vận chuyển</label>
                                                    </div><!-- End .custom-control -->
                                                </td>
                                                <td>0 đ</td>
                                            </tr><!-- End .summary-shipping-row -->

                                            <tr class="summary-shipping-row">
                                                <td>
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="standart-shipping" name="shipping" class="custom-control-input">
                                                        <label class="custom-control-label" for="standart-shipping">Giao hàng tiết kiệm</label>
                                                    </div><!-- End .custom-control -->
                                                </td>
                                                <td>28.000 đ</td>
                                            </tr><!-- End .summary-shipping-row -->

                                            <tr class="summary-shipping-row">
                                                <td>
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="express-shipping" name="shipping" class="custom-control-input">
                                                        <label class="custom-control-label" for="express-shipping">Giao hàng siêu tốc</label>
                                                    </div><!-- End .custom-control -->
                                                </td>
                                                <td>43.000 đ</td>
                                            </tr><!-- End .summary-shipping-row -->

                                            <tr class="summary-shipping-estimate">
                                                <td>
                                                    Thay đổi địa chỉ giao hàng<br>
                                                    địa chỉ giao hàng <br>
                                                    <a href="dashboard.html">Thay đổi</a>
                                                </td>
                                                <td>&nbsp;</td>
                                            </tr><!-- End .summary-shipping-estimate -->
                                            <tr class="summary-shipping-row">
                                                <td>Phương thức thanh toán</td>
                                                <td>&nbsp;</td>
                                            </tr>

                                            <tr class="summary-shipping-row">
                                                <td>
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="payment" name="payment" class="custom-control-input">
                                                        <label class="custom-control-label" for="payment">Thanh toán tiền mặt</label>
                                                    </div><!-- End .custom-control -->
                                                </td>
                                                <td>&nbsp;</td>
                                            </tr><!-- End .summary-shipping-row -->

                                            <tr class="summary-shipping-row">
                                                <td>
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="paymentmomo" name="payment" class="custom-control-input">
                                                        <label class="custom-control-label" for="paymentmomo">Thanh toán qua Momo</label>
                                                    </div><!-- End .custom-control -->
                                                </td>
                                                <td>
                                                    <img src="/assets/images/icons/momo_icon_rectangle.png" width="80px" />
                                                </td>
                                            </tr><!-- End .summary-shipping-row -->

                                            <tr class="summary-total">
                                                <td>Tổng cộng</td>
                                                <td id="totalPrice">@String.Format("{0:n0}",(Session[SessionConstaint.SHOPPINGCART] as CartView).totalprice)</td>
                                            </tr><!-- End .summary-total -->
                                        </tbody>
                                    </table><!-- End .table table-summary -->

                                    <a onclick="getPaymentMethod()" class="btn btn-outline-primary-2 btn-order btn-block" style="font-family: Tahoma">Tiếp tục thanh toán</a>
                                </div><!-- End .summary -->

                                <a href="/Shop" class="btn btn-outline-dark-2 btn-block mb-3"><span>Trở về mua sắm</span><i class="icon-refresh"></i></a>
                            </aside><!-- End .col-lg-3 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .cart -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->


    </div><!-- End .page-wrapper -->
    <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>
    <!-- Plugins JS File -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/jquery.hoverIntent.min.js"></script>
    <script src="assets/js/jquery.waypoints.min.js"></script>
    <script src="assets/js/superfish.min.js"></script>
    <script src="assets/js/owl.carousel.min.js"></script>
    <script src="assets/js/bootstrap-input-spinner.js"></script>
    <!-- Main JS File -->
    <script src="assets/js/main.js"></script>
    <script type="text/javascript">
        function getPaymentMethod() {
            var paymentmomo = document.getElementById("paymentmomo").checked;

            if (paymentmomo) {
                var amout = document.getElementById('totalPrice').innerText;
                amout = amout.replaceAll(",", "");
                if (amout > 50000000) {
                    alert("Chỉ có thể thanh toán Momo đơn hàng nhỏ hơn 50 triệu");
                }
                else {
                    var urlPayment = "/Consumer/PaymentMomo?amout=" + amout;
                    window.location.replace(urlPayment);
                } 
            }

            else {
                window.location.replace("/Consumer/Payment/");
            }
        }

    </script>
</body>
</html>

