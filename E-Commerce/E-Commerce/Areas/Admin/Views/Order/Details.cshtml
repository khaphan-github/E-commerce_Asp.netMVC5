@model E_Commerce_Repository.Models.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}
@using E_Commerce_Repository.Models

@using (Html.BeginForm("Update", "Order", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card card-primary">
        <div class="card-header">
            <h4 class="card-title">Chi Tiết Đơn Hàng</h4>
        </div>
        <form class="form-horizontal" action="@Url.Action("Update", "Order", new { account = Model as Order})">
            <div class="col-md-10">
                <label for="Name">Mã đơn hàng</label>
                <dd>
                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "readonly", @placeholder = "id" })
                </dd>
            </div>

            <div class="col-md-10">
                <label for="Name">Ngày tạo</label>
                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>
            </div>

            <div class="col-md-10">
                <label for="Name">Danh sách sản phẩm</label>
                <table class="table table-striped table-valign-middle">
                    <thread>
                        <tr>
                            <th>STT</th>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                        </tr>
                        @{
                            int i = 0;
                            foreach (OrderDetail item in ViewBag.Danhsachsp)
                            {
                                i += 1;
                                <tr>
                                    <td>@i</td>
                                    <td><img src="@Html.DisplayFor(modelItem => item.Product.ProductImages.ElementAt(0).URL)" alt="Product image" class="product-image" style="width:50px;" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Product.ShoppingCardDetails.ElementAt(0).Number)</td>
                                    <td>@String.Format("{0:n0}", item.Product.Price) VNĐ</td>
                                </tr>
                            }
                        }


                    </thread>
                </table>
            </div>

            <div class="col-md-10">
                <label for="Name">Tổng giá</label>
                <dd>
                    @Html.DisplayFor(model => model.TotalPrice) VNĐ
                </dd>
            </div>

            <div class="col-md-10">
                <label for="Name">Phương thức vận chuyển</label>
                <dd>
                    <!--Html.DropDownList(new SelectList(Enum.GetValues(typeof(ShippingMethod))), new { class = "form-control", readonly = "readonly", placeholder = "Phương thức vận chuyển" })-->
                    @Html.DisplayTextFor(model => model.ShippingMethod.Name)
                </dd>
            </div>

            <div class="col-md-10">
                <label for="Name">Phương thức thanh toán</label>
                <dd>
                    @Html.DisplayFor(model => model.PaymentMethod.Name)
                </dd>
            </div>

            <div class="col-md-10">
                <label for="Name">Trạng thái giao hàng (Sửa nếu cần)</label>
                <dd>
                    @Html.DropDownList("DeliverStateID")
                </dd>
            </div>

            <div class="col-md-10">
                <label for="Name">Khách hàng</label>
                <dd>
                    @Html.DisplayFor(model => model.AccountConsumer.DisplayName)
                </dd>
            </div>

            <div class="col-md-10">
                <label for="Name">Địa chỉ</label>
                <dd>
                    @Html.DisplayFor(model => model.Address.Street)
                </dd>
            </div>
            <div class="form-group row">
                <div class="offset-sm col-sm-10">
                    <button type="submit" class="btn btn-danger">Lưu</button>
                </div>
            </div>
    </form>
</div>
}
<p>
    @Html.ActionLink("Về danh sách", "Index")
</p>
