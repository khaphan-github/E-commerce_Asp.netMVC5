@model E_Commerce_Repository.Models.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card card-primary">
        <div class="card-header">
            <h4 class="card-title">Chi Tiết Sản Phẩm</h4>
        </div>
        <div class="dl-horizontal">
            <div class="col-md-10">
                <label for="Name">Tên Sản Phẩm</label>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Giá</label>
                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Số Lượng</label>
                <dd>
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Khuyến Mãi</label>
                <dd>
                    @Html.DisplayFor(model => model.Promotion.Name)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Công Ty</label>
                <dd>
                    @Html.DisplayFor(model => model.Company.Name)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Nhà Cung Cấp</label>
                <dd>
                    @Html.DisplayFor(model => model.Supplier.Name)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Loại Sản Phẩm</label>
                <dd>
                    @Html.DisplayFor(model => model.TypeProduct.Name)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Mô Tả</label>
                <dd style="width:600px; text-align:justify">
                    @Html.DisplayFor(model => model.Describe.Description)
                </dd>
            </div>
            
            <div class="col-md-10">
                <label for="Name">Hình Ảnh</label>
                <dd>
                    <img src="@Html.DisplayFor(modelItem => modelItem.ProductImages.ElementAt(0).URL)" style="width:80px;" />
                </dd>
            </div>
        </div>
     </div>
}
<p>
    @Html.ActionLink("Cập Nhật", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Về Danh Sách", "Index")
</p>
